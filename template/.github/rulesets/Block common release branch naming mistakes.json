{
    "name": "Block common release branch naming mistakes",
    "target": "branch",
    "source_type": "Repository",
    "source": "{{RepoName}}",
    "enforcement": "active",
    "conditions": {
        "ref_name": {
            "exclude": [
                "refs/heads/release/v**"
            ],
            "include": [
                "refs/heads/releases/**",
                "refs/heads/release/**"
            ]
        }
    },
    "rules": [
        {
            "type": "deletion"
        },
        {
            "type": "non_fast_forward"
        },
        {
            "type": "creation"
        },
        {
            "type": "update"
        }
    ],
    "bypass_actors": []
}
